    <script>
		$(document).ready(function(){

		
		filter_data(1);
		$('#slider-range').slider({
			range:true,
			min:5,
			max:65,
			values:[5,65],
			step:5,
			stop:function(event, ui)
			{
				console.log(ui.values[0]);
				$('#price-show').html(ui.values[0] + ' - ' + ui.values[1]);
				$('#hidden_minimum_price').val(ui.values[0]);
				$('#hidden_maximum_price').val(ui.values[1]);
				filter_data(1);
			}

		});

		});
		function filter_data(page)
		{
			var minimum_price = $('#hidden_minimum_price').val() ;
			var maximum_price = $('#hidden_maximum_price').val() ;
			record_per_page = 3;
			let url = '{{ path('get_product') }}';
            //url  = url .replace("page", page);
			$.ajax({
				url:url,
				method:"POST",
				dataType:"JSON",
				data:{minimum_price:minimum_price,maximum_price:maximum_price,record_per_page:record_per_page, page:page},
				success:function(data)
				{
					console.log(data);
					$('#pagination').html(data.pagination);
					$('#product_html').html(data.product_list);
					
				}
			});
		};
		$(document).on('click', '.pagination_link', function(){  
           let id = $(this).attr("id");
		  
		   filter_data(id)
      	});
		

		
